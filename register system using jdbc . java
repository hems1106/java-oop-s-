import java.sql.*;
import java.util.Scanner;

public class StudentCourseRegistration {
    // Database connection details
    static final String URL = "jdbc:mysql://localhost:3306/studentdb";
    static final String USER = "root";
    static final String PASS = "yourpassword";

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Connection con = null;

        try {
            // 1. Load JDBC Driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // 2. Establish Connection
            con = DriverManager.getConnection(URL, USER, PASS);
            System.out.println("Database connected successfully!");

            int choice;
            do {
                System.out.println("\n--- Student Course Registration System ---");
                System.out.println("1. Register for Course");
                System.out.println("2. View Registered Courses");
                System.out.println("3. Update Course Registration");
                System.out.println("4. Delete Course Registration");
                System.out.println("5. Exit");
                System.out.print("Enter your choice: ");
                choice = sc.nextInt();

                switch (choice) {
                    case 1:
                        registerCourse(con, sc);
                        break;
                    case 2:
                        viewCourses(con);
                        break;
                    case 3:
                        updateCourse(con, sc);
                        break;
                    case 4:
                        deleteCourse(con, sc);
                        break;
                    case 5:
                        System.out.println("Exiting...");
                        break;
                    default:
                        System.out.println("Invalid choice! Try again.");
                }
            } while (choice != 5);

        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            try {
                if (con != null)
                    con.close();
            } catch (SQLException se) {
                se.printStackTrace();
            }
        }
    }

    // Insert Operation
    public static void registerCourse(Connection con, Scanner sc) throws SQLException {
        System.out.print("Enter Student ID: ");
        int sid = sc.nextInt();
        sc.nextLine();
        System.out.print("Enter Student Name: ");
        String sname = sc.nextLine();
        System.out.print("Enter Course Name: ");
        String cname = sc.nextLine();

        String query = "INSERT INTO registration(student_id, student_name, course_name) VALUES (?, ?, ?)";
        PreparedStatement ps = con.prepareStatement(query);
        ps.setInt(1, sid);
        ps.setString(2, sname);
        ps.setString(3, cname);

        int rows = ps.executeUpdate();
        if (rows > 0)
            System.out.println("Course registered successfully!");
        ps.close();
    }

    // View Operation
    public static void viewCourses(Connection con) throws SQLException {
        String query = "SELECT * FROM registration";
        Statement st = con.createStatement();
        ResultSet rs = st.executeQuery(query);

        System.out.println("\n--- Registered Courses ---");
        while (rs.next()) {
            System.out.println("ID: " + rs.getInt("student_id") +
                    ", Name: " + rs.getString("student_name") +
                    ", Course: " + rs.getString("course_name"));
        }
        rs.close();
        st.close();
    }

    // Update Operation
    public static void updateCourse(Connection con, Scanner sc) throws SQLException {
        System.out.print("Enter Student ID to update: ");
        int sid = sc.nextInt();
        sc.nextLine();
        System.out.print("Enter new Course Name: ");
        String cname = sc.nextLine();

        String query = "UPDATE registration SET course_name=? WHERE student_id=?";
        PreparedStatement ps = con.prepareStatement(query);
        ps.setString(1, cname);
        ps.setInt(2, sid);

        int rows = ps.executeUpdate();
        if (rows > 0)
            System.out.println("Course updated successfully!");
        else
            System.out.println("Student ID not found!");
        ps.close();
    }

    // Delete Operation
    public static void deleteCourse(Connection con, Scanner sc) throws SQLException {
        System.out.print("Enter Student ID to delete: ");
        int sid = sc.nextInt();

        String query = "DELETE FROM registration WHERE student_id=?";
        PreparedStatement ps = con.prepareStatement(query);
        ps.setInt(1, sid);

        int rows = ps.executeUpdate();
        if (rows > 0)
            System.out.println("Registration deleted successfully!");
        else
            System.out.println("Student ID not found!");
        ps.close();
    }
}
